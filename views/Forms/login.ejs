
<form class="form-horizontal m-t-30" id="login-form" >

    <div class="form-group">
        <label for="username"  class="small font-weight-bolder">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter Email"  required>
    </div>

    <div class="form-group mt-2">
        <label for="password"  class="small font-weight-bolder">password</label>
        <input type="password" class="form-control" id="password" placeholder="Enter password" required>
    </div>

    <div class="form-group mt-2">
        <label for="role"  class="small font-weight-bolder">Who Are You?</label>
        <select id="role" name="role" class="custom-select" style="height: 35px;" required>
            <option value="Carrier" onclick="paramentHideSocial()">Carrier</option>
            <option value="Shipper"  onclick="ShowSocial()">Shipper</option>
        </select>
    </div>
    <div id="social" style="display:none; margin-top: 20px;">
        <a href="/auth/facebook" type="button" ><img src ="../../public/assets/images/fbLogo.jpeg" height="50" width="50"></a>
        <a href="/auth/google" type="button" ><img src ="../../public/assets/images/googleLogo2.png" height="50" width="50"></a>
    </div>

    

    <div class="form-group row mt-2">
        <div class="col-sm-6">
            <div class="custom-control custom-checkbox mt-3">
                <input type="checkbox" class="custom-control-input" id="remember" name="remember">
                <label class="custom-control-label" for="remember">Remember me</label>
            </div>
            
        </div>
        <div class="col-sm-6 text-right">
            <button class="btn btn-primary w-md waves-effect waves-light mt-4 login-button" type="submit">Log In</button>
        </div>
    </div>

    <div class="form-group m-t-10 mb-0 row">
        <div class="col-12 m-t-20">
            <a href="/forget-password"><i class="mdi mdi-lock"></i> Forgot your password?</a>
        </div>
    </div>
</form>

<script>
    ShowSocial =() => {
        var x = document.getElementById("social");
        if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        x.style.display = "none";
      }
        
    }
    
    paramentHideSocial =() =>{
        var x = document.getElementById("social");
        x.style.display = "none";
    }

    </script>